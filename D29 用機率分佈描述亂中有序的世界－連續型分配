
import matplotlib.pyplot as plt
import numpy as np
import pandas as pd
from scipy import stats
import math
import statistics
import seaborn as sns

# Q1：計算標準常態分配，小於 1 的機率有多大？

mu = 0
sigma = 1
x = np.linspace(-10,10,500)

cumsum_probs = stats.uniform.cdf(x, mu, sigma)
plt.plot(x, cumsum_probs, "b-", linewidth=2)
plt.show()
print(cumsum_probs)


# Q2：計算標準常態分配，大於1，小於 -1 的機率有多大？


cumsum_probs = stats.uniform.cdf(1, mu, sigma)
print(cumsum_probs)

